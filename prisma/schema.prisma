generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")     // pooling transaction mode (Supavisor 6543) para runtime Vercel/serverless
  directUrl = env("DIRECT_URL")       // conex√£o direta (porta 5432) para migrations / prisma studio / db pull
}

model Confirmacao {
  id         String            @id @default(uuid())
  nome       String
  email      String?
  telefone   String?
  status     StatusConfirmacao
  restricoes String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  @@map("confirmacoes")
}

enum StatusConfirmacao {
  sim
  nao
}

model Presente {
  id                  String   @id @default(cuid())
  guest_name          String
  present_description String
  createdAt           DateTime @default(now())
  @@map("presentes")
}


model Recado {
  id        String   @id @default(uuid())
  name      String
  message   String
  createdAt DateTime @default(now())
}