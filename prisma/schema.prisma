datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Confirmacao {
  id         String            @id @default(uuid())
  nome       String
  email      String?
  telefone   String?
  status     StatusConfirmacao
  restricoes String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@map("confirmacoes")
}

model Presente {
  id                  String   @id @default(cuid())
  guest_name          String
  present_description String
  createdAt           DateTime @default(now())

  @@map("presentes")
}

model Recado {
  id        String   @id @default(uuid())
  name      String
  message   String
  createdAt DateTime @default(now())

  @@map("recados")
}


enum StatusConfirmacao {
  sim
  nao
}
